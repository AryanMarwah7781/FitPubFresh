# Production Environment Variables
# Copy to .env for local development

# FastAPI Configuration
APP_NAME=FitPub AI Assistant
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://fitpub:password@localhost:5432/fitpub_db
ASYNC_DATABASE_URL=postgresql+asyncpg://fitpub:password@localhost:5432/fitpub_db

# Redis Configuration (for caching/sessions)
REDIS_URL=redis://localhost:6379/0

# AI Model Configuration
MODEL_PATH=./models/mistral-7b-instruct
VLLM_ENGINE_ARGS=--max-model-len=4096 --dtype=half
ENABLE_CUDA=true

# AWS Configuration (for cloud deployment)
AWS_REGION=us-west-2
EKS_CLUSTER_NAME=ai-fitness-dev

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload Limits
MAX_FILE_SIZE_MB=10